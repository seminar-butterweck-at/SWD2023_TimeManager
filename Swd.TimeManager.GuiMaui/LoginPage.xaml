<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Swd.TimeManager.GuiMaui.LoginPage"
             xmlns:local="clr-namespace:Swd.TimeManager.GuiMaui.ViewModel"
             Title="LoginPage">

            <ContentPage.BindingContext>
                <local:LoginPageViewModel />
            </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto" Padding="20" RowSpacing="5">

        <Label Grid.Row="0" Text="TimeManager" FontSize="23" HorizontalTextAlignment="Center" />
        <Label Grid.Row="1" Text="Record your time" Margin="0,0,0,18" HorizontalTextAlignment="Center" />

        <Label Grid.Row="2" Text="E-Mail or Username" FontSize="16" FontAttributes="Bold" />
        <Entry Grid.Row="3" Text="{Binding Username}" BackgroundColor="#c7dbe0" TextColor="#578794" HeightRequest="50" />

        <Label Grid.Row="4" Text="Password" FontSize="16" FontAttributes="Bold" />
        <Entry Grid.Row="5" Text="{Binding Password}" BackgroundColor="#c7dbe0" TextColor="#578794" HeightRequest="50" IsPassword="True" />

        <Button Grid.Row="6" Command="{Binding LoginCommand}" Text="Login" FontAttributes="Bold" />

        <Label Grid.Row="7" FontAttributes="Bold">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="No account?" />
                    <Span Text="Request your account information from your Administrator" />
                 </FormattedString>
            </Label.FormattedText>
        </Label>


    </Grid>
    
    
</ContentPage>